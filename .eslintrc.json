{
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "overrides": [
      {
        "files": ["**/*.spec.js", "**/*.test.js", "**/*.spec.jsx"],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "react/prop-types": 0,
        "quotes": [
            "error",
            "single"
        ]
    }
}